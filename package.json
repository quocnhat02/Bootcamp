{
    "name": "my-nodejs-project",
    "version": "1.0.0",
    "description": "A senior-level Node.js project",
    "main": "src/server.ts",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
        "test:unit": "jest --testMatch='<rootDir>/src/tests/unit/**/*.test.ts'",
        "test:integration": "jest --testMatch='<rootDir>/src/tests/integration/**/*.test.ts'",
        "test:e2e": "jest --config jest.config.e2e.js",
        "typecheck": "tsc --noEmit",
        "test:all": "npm run test && npm run test:e2e"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/joi": "^17.2.3",
        "@types/winston": "^2.4.4",
        "accesscontrol": "^2.2.1",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^6.11.2",
        "helmet": "^4.6.0",
        "ioredis": "^5.0.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.6.1",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.15",
        "slugify": "^1.6.6",
        "uuid": "^10.0.0",
        "winston": "^3.14.2",
        "winston-daily-rotate-file": "^5.0.0",
        "xss-clean": "^0.1.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.2",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.6",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.15",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "eslint": "^8.1.0",
        "jest": "^27.3.1",
        "mongodb-memory-server": "^10.0.0",
        "nodemon": "^2.0.14",
        "prettier": "^2.4.1",
        "supertest": "^7.0.0",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        }
    }
}
